      "@gv-cv/nestjs-feature-export": [
        "libs/nestjs/feature-export/src/index.ts"
      ],
      "@gv-cv/shared-util-types": ["libs/shared/util-types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
